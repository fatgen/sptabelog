<p id="notice"><%= notice %></p>

<p>
  <strong>店舗名:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>電話番号:</strong>
  <%= @restaurant.tel %>
</p>

<p>
  <strong>住所:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>ホームページ:</strong>
  <%= @restaurant.hp %>
</p>

<p>
  <strong>店舗情報:</strong>
  <%= @restaurant.intro %>
</p>


<%= link_to '編集', edit_restaurant_path(@restaurant) %> |
<%= link_to '戻る', restaurants_path %>
<%= link_to 'レビューを書く', new_restaurant_review_path(@restaurant) %>


<hr>


<h2>【レビュー一覧】</h2>
<%= @restaurant.reviews.each do |review| %>
  <p>
    <%= review.body %> <br>
    by <%= review.user.email %> さん
  </p>

<% end %>

<hr>

<h2>【レビュー投稿ユーザー一覧】</h2>
<%= @restaurant.users.each do |user| %>
  <p>
    <%= user.email %>さん
  </p>
<% end %>
